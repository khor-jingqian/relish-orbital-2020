<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shop_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_logo"
            android:text="Ben"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_toRightOf="@id/shop_logo"
            android:text="Chinese food"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/shop_dish1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/shop_cuisine"
            android:layout_toRightOf="@id/shop_logo" />

        <TextView
            android:id="@+id/shop_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shop_dish1"
            android:layout_toRightOf="@id/shop_dish1" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>